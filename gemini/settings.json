{
  "security": {
    "auth": {
      "selectedType": "gemini-api-key"
    }
  },

  "ui": {
    "hideBanner": true,
    "footer": {
      "hideContextPercentage": false
    },
    "showMemoryUsage": true,
    "theme": "auto"
  },

  "general": {
    "previewFeatures": true,
    "enablePromptCompletion": true
  },

  "tools": {
    "autoAccept": true,
    "enableMessageBusIntegration": true,

    "core": [
      "run_shell_command(systemctl)",
      "run_shell_command(journalctl)",
      "run_shell_command(pm2)",
      "run_shell_command(tail)",
      "run_shell_command(head)",
      "run_shell_command(cat)",
      "run_shell_command(grep)",
      "run_shell_command(docker)",
      "run_shell_command(kubectl)",
      "run_shell_command(curl)",
      "run_shell_command(wget)",
      "run_shell_command(git)",
      "run_shell_command(ls)",
      "run_shell_command(ps)",
      "run_shell_command(top)",
      "run_shell_command(htop)",
      "run_shell_command(df)",
      "run_shell_command(du)",
      "run_shell_command(free)",
      "run_shell_command(netstat)",
      "run_shell_command(ss)",
      "run_shell_command(lsof)",
      "run_shell_command(nginx)",
      "run_shell_command(redis-cli)",
      "run_shell_command(psql)",
      "run_shell_command(pip)",
      "run_shell_command(npm)",
      "run_shell_command(node)",
      "run_shell_command(python3)",
      "read_file",
      "write_file",
      "glob",
      "google_web_search",
      "web_fetch"
    ],

    "exclude": [
      "run_shell_command(rm -rf /)",
      "run_shell_command(dd if=)",
      "run_shell_command(mkfs)",
      "run_shell_command(fdisk)",
      "run_shell_command(shutdown)",
      "run_shell_command(reboot)",
      "run_shell_command(init 0)",
      "run_shell_command(halt)"
    ],

    "shell": {
      "enableInteractiveShell": true,
      "showColor": true,
      "pager": "less",
      "defaultTimeout": 120000
    }
  },

  "sandbox": "none",

  "memory": {
    "enabled": true,
    "autoSave": true
  }
}
